<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/x5"
    >
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40"
            android:layout_margin="@dimen/x15"
            />

        <!-- <com.facebook.drawee.view.SimpleDraweeView
             android:id="@+id/iv"
             fresco:roundAsCircle="true"
             android:layout_width="@dimen/x41"
             android:layout_height="@dimen/y41"
             android:padding="@dimen/x5"
             app:placeholderImage="@drawable/head"
             android:layout_marginTop="@dimen/y20"
             />-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/x60"
            android:layout_marginTop="@dimen/y10"
            >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="name"
                android:textColor="#f00" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:textSize="10sp"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/iv_animation1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/y5"
            >

            <ImageView
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/y25"
                android:src="@drawable/shiled1"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:visibility="gone"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/iv_animation2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/y5">

            <ImageView
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/y25"
                android:src="@drawable/copylink1"
                android:layout_alignParentRight="true"

                />
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:visibility="gone"/>

        </LinearLayout>




        <LinearLayout
            android:id="@+id/iv_animation3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/y5">

            <ImageView
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/y25"
                android:src="@drawable/report1"
                android:layout_alignParentRight="true"

                />
            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:visibility="gone"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/iv_animation"
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/y25"
            android:src="@drawable/icon_open"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/y5"
            />
        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_shutdown"
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/y25"
            android:src="@drawable/icon_packup"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/y5"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginLeft="@dimen/x15"
        android:ellipsize="end"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_marginLeft="@dimen/x10"
        android:id="@+id/rv_duanzi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv"
        android:layout_marginRight="@dimen/x10"
        >
    </android.support.v7.widget.RecyclerView>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#EDEBED"
        android:layout_below="@+id/rv_duanzi"
        />


</RelativeLayout>