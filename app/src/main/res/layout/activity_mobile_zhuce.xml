<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/raw_1500974387"
    android:layout_height="match_parent"

    tools:context="com.example.zsd.activity.MobileZhuceActivity">
    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x44"
            android:layout_marginStart="@dimen/y44"
            android:padding="5px"
            android:src="@drawable/raw_1500885944" />

        <TextView
            android:id="@+id/tv_yiyouzhanghao"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y130"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x20"
            android:gravity="center"
            android:text="已有账号?"
            android:textColor="@color/colorziti" />
    </RelativeLayout>

    <ImageView
        android:layout_width="@dimen/x160"
        android:layout_height="@dimen/y160"
        android:layout_below="@+id/relativeLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y50"
        android:src="@drawable/raw_1500977101" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></RelativeLayout>

    <LinearLayout
        android:id="@+id/rl_background"
        android:layout_width="@dimen/x520"
        android:layout_height="@dimen/y200"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/y40"
        android:background="@drawable/but_login"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/zhuce_mobile"
                android:hint="请输入手机号"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:background="@null"
                android:textSize="14dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginRight="@dimen/y24"
            android:background="#C4C4C4"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">


            <EditText
                android:id="@+id/zhuce_mima"
                android:hint="输入大小写和数字,密码不能超过8位"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:background="@null"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/zhuce_btn"
        android:layout_width="@dimen/x520"
        android:layout_height="@dimen/y90"
        android:layout_alignLeft="@+id/rl_background"
        android:layout_alignStart="@+id/rl_background"
        android:layout_below="@+id/rl_background"
        android:layout_marginTop="@dimen/y60"
        android:text="注册"
        android:background="@drawable/but_logo"
        android:textColor="#fff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y90"
        android:layout_marginLeft="@dimen/x511"
        android:layout_marginTop="@dimen/y950"
        android:gravity="center"
        android:text="忘记密码"
        android:textColor="#B5B3A1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y1100"
        android:text="游客登录"
        android:textColor="#B5B3A1" />
</RelativeLayout>
