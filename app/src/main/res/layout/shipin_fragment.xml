<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/shipin_timeline_tablayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        app:tabIndicatorColor="#39AEFB"
        app:tabMaxWidth="1080dp"
        app:tabPadding="0dp"
        app:tabIndicatorHeight="@dimen/x15"
        app:tabSelectedTextColor="#39AEFB"
        app:tabTextAppearance="@style/TabLayoutTextStyle" />

    <android.support.v4.view.ViewPager
        android:id="@+id/shipin_timeline_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/timeline_tablayout" />
</LinearLayout>