<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zsd.activity.MyShoucangActivity">
    <RelativeLayout
        android:id="@+id/rl_rl_soucang"
        android:background="#03A9F4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100">
        <ImageView
            android:id="@+id/shoucang_iv_back"
            android:layout_marginTop="@dimen/y25"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/x10"
            android:src="@mipmap/imageselector_back"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40" />
        <TextView
            android:id="@+id/shoucang_tv_back"
            android:layout_toRightOf="@+id/shoucang_iv_back"
            android:text="返回"
            android:layout_marginTop="@dimen/x25"
            android:textColor="#fff"
            android:textSize="@dimen/x40"
            android:layout_marginRight="@dimen/x50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#fff"
            android:text="我的收藏"
            android:textSize="@dimen/y40"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/shoucang_tv_delete"
            android:layout_alignParentRight="true"
            android:text="删除"
            android:textColor="#fff"
            android:textSize="@dimen/y40"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/rl_rl_soucang"
        android:id="@+id/shoucang_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
</RelativeLayout>
