<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zsd.activity.MyGuanzhuActivity">
    <RelativeLayout
        android:id="@+id/rl_rl_guanzhu"
        android:background="#03A9F4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100">
        <ImageView
            android:id="@+id/guanzhu_iv_back"
            android:layout_marginTop="@dimen/y25"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/x10"
            android:src="@mipmap/imageselector_back"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40" />
        <TextView
            android:layout_toRightOf="@+id/guanzhu_iv_back"
            android:text="返回"
            android:layout_marginTop="@dimen/x25"
            android:textColor="#fff"
            android:textSize="@dimen/x40"
            android:layout_marginRight="@dimen/x50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#fff"
            android:text="我的关注"
            android:textSize="@dimen/y40"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:text="热门关注"
            android:textColor="#fff"
            android:textSize="@dimen/y40"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:layout_below="@+id/rl_rl_guanzhu"
        android:id="@+id/guanzhu_follow_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.jcodecraeer.xrecyclerview.XRecyclerView>
</RelativeLayout>
