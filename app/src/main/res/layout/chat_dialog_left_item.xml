<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/chat_tv_time_left"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.example.zsd.RoView
        android:id="@+id/iv_chat_imagr_left"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/y80"
        android:layout_gravity="top" />

    <TextView
        android:layout_toRightOf="@+id/iv_chat_imagr_left"
        android:id="@+id/tv_chat_me_message_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:background="@drawable/app_lvjian_other_chat_background"
        android:text="权志龙好帅！！！" />

</RelativeLayout>