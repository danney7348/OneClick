<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.zsd.activity.ShezhiActivity">
    <RelativeLayout
        android:id="@+id/she_r1"
        android:background="#33ccff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120">

        <ImageView
            android:id="@+id/shezhi_back"
            android:src="@drawable/raw_1500023215"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/x30"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40" />

        <TextView
            android:layout_toRightOf="@+id/shezhi_back"
            android:textColor="#ffffff"
            android:text="返回"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y120" />

        <TextView
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:text="设置"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:id="@+id/she_v1"
        android:background="@color/lavender"
        android:layout_marginTop="@dimen/x120"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x10"/>

    <RelativeLayout
        android:id="@+id/shezhi_rl_check_version"
        android:layout_marginTop="@dimen/x140"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100">

        <TextView

            android:clickable="true"
            android:id="@+id/she_tv_gengxin"
            android:gravity="center"
            android:textColor="@color/colorziti"
            android:text="检查更新"
            android:layout_marginLeft="@dimen/x20"
            android:textSize="@dimen/x40"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:textColor="@color/colorziti"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/she_img_gengxin"
            android:text="0.1.1"
            android:layout_marginRight="@dimen/x50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginRight="@dimen/x30"
            android:id="@+id/she_img_gengxin"
            android:layout_centerInParent="true"
            android:src="@drawable/raw_1"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40" />

    </RelativeLayout>
    <View
        android:layout_marginLeft="@dimen/x40"
        android:background="@color/lavender"
        android:layout_marginTop="@dimen/x260"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"/>
    <RelativeLayout
        android:id="@+id/shezhi_rl_yijianfankui"
        android:layout_marginTop="@dimen/x260"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100">
        <TextView
            android:id="@+id/she_tv_yijian"
            android:gravity="center"
            android:layout_marginLeft="@dimen/x20"
            android:textColor="@color/colorziti"
            android:text="意见反馈"
            android:textSize="@dimen/x40"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />



        <ImageView
            android:layout_marginRight="@dimen/x30"
            android:layout_centerInParent="true"
            android:src="@drawable/raw_1"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40" />
    </RelativeLayout>

    <View
        android:id="@+id/she_v2"
        android:background="@color/lavender"
        android:layout_marginTop="@dimen/x360"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x20"/>
    <RelativeLayout
        android:id="@+id/shezhi_rl_about_querter"
        android:layout_marginTop="@dimen/x360"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100">
        <TextView
            android:id="@+id/she_tv_guanyu"
            android:gravity="center"
            android:textColor="@color/colorziti"
            android:text="关于一刻钟"
            android:textSize="@dimen/x40"
            android:layout_marginLeft="@dimen/x20"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_marginRight="@dimen/x30"
            android:layout_centerInParent="true"
            android:src="@drawable/raw_1"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/shezhi_rl_clear_huncun"
        android:layout_marginTop="@dimen/x460"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100">
        <TextView
            android:id="@+id/she_tv_huancun"
            android:gravity="center"
            android:textColor="@color/colorziti"
            android:text="清除缓存"
            android:textSize="@dimen/x40"
            android:layout_marginLeft="@dimen/x20"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/she_tv_hcnum"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/she_img_huancun"
            android:text="缓存的数量"
            android:textColor="@color/colorziti"
            android:layout_marginRight="@dimen/x50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/she_img_huancun"
            android:layout_marginRight="@dimen/x30"
            android:layout_centerInParent="true"
            android:src="@drawable/raw_1"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40" />
    </RelativeLayout>


    <Button
        android:id="@+id/shezhi_login_clear"
        android:layout_marginTop="@dimen/y600"
        android:background="@drawable/bg_login_shape"
        android:textColor="#ffffff"
        android:text="退出登录"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
